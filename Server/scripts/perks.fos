	PROCESS_PERK1(PE_ACTION_BOY,          2, 12, cr.ParamBase[ST_AGILITY]>=5      );
	PROCESS_PERK1(PE_LIFEGIVER,           2, 12, cr.ParamBase[ST_ENDURANCE]>=4    );
