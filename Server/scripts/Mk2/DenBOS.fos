		uint pid=item.GetProtoId();
		if(pid== uint( Content::Item::ACTIVE_PLASTIC_EXPLOSIVE ) ||pid== uint( Content::Item::ACTIVE_MINE ) ||pid== uint( Content::Item::ACTIVE_DYNAMITE ) )
