/* **************************************** Вспомогательные функции **************************************** */
// Находит минимум и максимум в массиве целых. Если не найдены - вернет ложь
bool _GetLimits( uint[] arr, uint& out min, uint& out max )
{
    if( arr.length() == 0 )
        return false;
    min = arr[ 0 ];
    max = min;
    for( uint i = 0, iMax = arr.length(); i < iMax; i++ )
    {
        if( arr[ i ] < min )
            min = arr[ i ];
        if( arr[ i ] > max )
            max = arr[ i ];
    }

    return true;
}
// Находит индекс минимального значения в массиве
bool _GetFirstMinIndex( uint[] arr, uint& out minIndex )
{
    uint min = 0,
         max = 0;

    if( not _GetLimits( arr, min, max ) )
        return false;

    for( uint i = 0, iMax = arr.length(); i < iMax; i++ )
        if( arr[ i ] == min )
            minIndex = i;
    return false;
}

// Берет случайный элемент массива из всех элементов, равных максимуму в данном массиве
bool _GetRandomMaxIndex( uint[] arr, uint& out maxIndex )
{
    uint min = 0,
         max = 0;

    if( not _GetLimits( arr, min, max ) )
        return false;

    uint[] maxes;
    for( uint i = 0, iMax = arr.length(); i < iMax; i++ )
        if( arr[ i ] == max )
            maxes.insertLast( i );

    maxIndex = maxes[ Random( 0, maxes.length() - 1 ) ];
    return true;
}

